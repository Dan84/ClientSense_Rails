<% provide(:title, @user.name) %>
       <section class="user_info">
          <h1>            
            <%= @user.name %>           
          </h1>
        </section>
      <div class="row">
    <div class="col-xs-8">      
      <%=render 'profiles/show'%>
    </div>  
      <div class="col-xs-4">
          <div class="panel panel-default box-shadow--6dp">
               <div class="panel panel-body">
                        <% if (@user.trainer?)%>
                            <h5><%= "#{@user.first_name}" %>'s Group Classes</h5> 
                            <% @createdclasses.each do |exclass| %><br><hr>
                            <%= link_to exclass.title, exclass %>
                            <%end%>                            
                       <% else%>
                          <h5><%= "#{@user.first_name}" %> is Attending</h5>
                          <% @bookings.each do |exclass| %><br><hr>
                          <%= link_to exclass.title, exclass %>
                          <%end%>
                      <%end%>
          </div>
          </div>
</div>
 <%if !current_user.trainer? and current_user == @user%>
    <%= link_to "View Progress", clientprogress_path, :method => "get", class: "btn btn-sm btn-primary" %>            
 <%end%>

      </div>

      <div id="profile-modal" class="modal fade"></div>