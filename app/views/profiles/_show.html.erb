<% provide(:title, @profile) %>


        <div class="panel default box-shadow--6dp">
            
                <div class="panel-body">
                    <p><%= image_tag @profile.avatar.url(:medium)%></p>
                    <p><b>Gender: </b><%=@profile.gender%></p>
                    <p><b>DOB: </b><%=@profile.dob%></p>
                    <p><b>Phone: </b><%=@profile.phone%></p>
                    <p><b>Goal: </b><%=@profile.goal%></p>
                    <% unless @profile.user.trainer? %>
                    <p><b>Occupation: </b><%=@profile.occupation%></p>                    
                    <p><b>Target Weight: </b><%=@profile.targetweight%></p>
                    <%end%>
                    <p><b>Bio: </b><%=@profile.bio%></p>
                    <% if current_user.profile == @profile %>
                    <%= link_to "Update Profile", edit_profile_path(current_user.id), remote: true, class: "btn btn-sm btn-primary" %>
                    <% end %> 
                </div>
                
        </div>
     