

<h1>Assessments</h1>
			<div class="row">
					<div class="col-xs-3 col-xs-push-7">
				<%= form_tag assessments_path, :method => 'get' do%>
					<p>					
						<div class="input-group">
  					       <%= text_field_tag :search, params[:search],remote: true,class: 'form-control',placeholder: 'Search client...'%>
  					        	<span class="input-group-btn">
  					        		 <%= submit_tag "Search", :client => nil, class: "btn btn-default"%> 
  					        	</span>
  					        	<span class="input-group-btn">
  					        		 <%= submit_tag "clear", :search => "reset" , class: "btn btn-default"%>
  					        	</span>
  					        	
  					      	</div>
					</p>
				<%end%>
				</div>						
			
				</div>
						<div class="row">
					 		<div class="col-xs-8 col-xs-push-2">
					 			<table class="table table-bordered box-shadow--6dp">
					 	   <thead>
					 	     <tr class="warning">
					 	       <th>Name</th>
					 	       <th>Date</th>
					 	       <th>Creator</th>
					 	       <th><%= link_to "Add New", new_assessment_path, remote: true, class: "btn btn-sm btn-primary" %></th>
					 	     </tr>
					 	   </thead>
					 	   <tbody class = "assessments-index">
					 	   	<%= render 'index'%>
					 	   </tbody>
					 	 </table>

					 					
							</div>						
					 	</div>
					 	<div id="assessment-modal" class="modal fade"></div>



