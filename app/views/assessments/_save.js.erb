$("ul.errors").html("")
<% if @assessment.errors.any? %>
  <% @assessment.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".assessments-index").html("<%= escape_javascript(render 'index') %>")
  $("#assessment-modal").modal("hide")
  //flash[:success] = "assessment created!"
<% end %>