 <div class="modal-dialog">
  <div class="modal-content">
    <%= form_for @exerciseclass do |f| %>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">New Class</h4>
      </div>
      <div class="modal-body">
        <ul class="errors"></ul>

 <!-- form_for(@exerciseclass) do |f|  -->
       <!-- render 'shared/error_messages', object: f.object  -->
          <%= f.label :title %>
          <%= f.text_field :title ,{class: 'form-control' }%>

          <%= f.label :description %>
          <%= f.text_area :description ,{class: 'form-control' }%>

          <%= f.label :class_style %><br />
          <%= f.collection_select(:class_style_id, ClassStyle.all, :id, :style, {}, {class: 'form-control' } ) %>

          <%= f.label :class_level %><br>
          <%= f.collection_radio_buttons(:class_level_id, ClassLevel.all, :id, :level, {}, {class: 'radio' }    ) %><br>

          <%= f.label :date %>
          <%= f.date_field :date, {class: 'form-control' } %>
            
          <!-- <div class="row">
               <div class="col-md-6 col-md-offset-3">
                     f.submit yield(:button_text), class: "btn btn-success" 
               </div>
          </div> -->



 </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>






          