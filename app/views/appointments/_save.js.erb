$("ul.errors").html("")
<% if @appointment.errors.any? %>
  <% @appointment.errors.full_messages.each do |message| %>
  
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#calendar-index").html("<%= escape_javascript(render 'calendar') %>")
  $("#appointment-modal").modal("hide")
<% end %>